<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackdark"
    android:orientation="vertical"
    tools:context=".LoginPage"
    android:gravity="center">

    <TextView
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/nameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_bg"
        android:hint="Name"
        android:textColor="@color/white"
        android:textColorHint="#C0C0C0"
        android:textSize="20sp"
        android:drawableStart="@drawable/personvector"
        android:drawableLeft="@drawable/personvector"
        android:drawablePadding="7dp"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>
    <EditText
        android:id="@+id/empid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Id"
        android:textColorHint="#C0C0C0"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/username"
        android:drawableLeft="@drawable/username"
        android:drawablePadding="7dp"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>
    <EditText
        android:id="@+id/branchcodeid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Branch Code"
        android:textColorHint="#C0C0C0"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/branchcode"
        android:drawableLeft="@drawable/branchcode"
        android:drawablePadding="7dp"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>
    <EditText
        android:id="@+id/passid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Password"
        android:textColorHint="#C0C0C0"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:drawableStart="@drawable/passvector"
        android:drawableLeft="@drawable/passvector"
        android:drawablePadding="7dp"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>
    <EditText
        android:id="@+id/confid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Conform Password"
        android:textColorHint="#C0C0C0"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:drawableStart="@drawable/passvector"
        android:drawableLeft="@drawable/passvector"
        android:drawablePadding="7dp"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/historyid"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Have any Medical History?"
        android:textColor="#FF5722"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="HistoryFun"/>


    <Button
        android:id="@+id/regbut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_bg"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="#000000"
        app:backgroundTint="@color/design_default_color_surface" />



    <TextView
        android:id="@+id/alreadylogin"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Already have an account ?"
        android:textColor="@color/white" />


</LinearLayout>